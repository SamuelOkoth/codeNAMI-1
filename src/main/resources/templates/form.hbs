{{#partial "content"}}
    <div class="row">
        <div class="col-md-12 profile-card">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <a class="navbar-brand text" href="#">codeNAMI</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="#">Profile <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="#">View Challenges <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="#">Post Challenges <span class="sr-only">(current)</span></a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
        <div class="col-md-12 padding-card" id=postChallenge>
            <div class="card w-75">
                <div class="card-body">
                    <form>
                        <div class="form-group">
                            <label for="errorName">Name of Error</label>
                            <input type="text" class="form-control" id="errorName" placeholder="Name of Error">
                            <small class="form-text text-muted"><strong>Input Name of Error</strong></small>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail1">Code</label>
                            <textarea type="text" class="form-control" id="code" placeholder="Enter your code"></textarea>
                            <small id="emailHelp" class="form-text text-muted"><strong>We'll never share your email with anyone else.</strong></small>
                        </div>
                        <div class="form-group">
                        <label for="errorDescription">Description of Error</label>
                            <textarea type="text" class="form-control" id="errorDescription" placeholder="Description of Error"></textarea>
                        <small class="form-text text-muted"><strong>Description of Error</strong></small>
                    </div>
                        <button type="submit" class="btn btn-primary">Add Challenge</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

{{/partial}}

